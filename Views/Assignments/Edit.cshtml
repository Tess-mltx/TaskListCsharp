@model TaskList.Models.Entities.Assignment

<h1>Edit a task</h1>

@if (Model is null)
{
    <p>No task found with this Id.</p>
} else 
{
<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <select class="form-select" asp-for="Status">
            <option value="To Do">To Do</option>
            <option value="Doing">Doing</option>
            <option value="Done">Done</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="col-form-label">Due Date</label>
        <input type="date" class="form-control" asp-for="DueDate" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>
}